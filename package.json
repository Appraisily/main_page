{
  "name": "appraisily-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "netlify:build": "turbo run build --filter=@repo/main... --filter=@repo/appraisers...",
    "build:main": "turbo run build --filter=@repo/main...",
    "build:appraisers": "turbo run build --filter=@repo/appraisers...",
    "postbuild": "node scripts/postbuild.js",
    "dev:main": "node scripts/dev-main.js",
    "dev:appraisers": "node scripts/dev-appraisers.js",
    "preview:main": "node scripts/preview.js main",
    "preview:appraisers": "node scripts/preview.js appraisers",
    "clean:deps": "node scripts/clean-deps.js",
    "clean:deps:cache": "node scripts/clean-deps.js --cache"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "latest"
  },
  "packageManager": "npm@9.6.7",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}